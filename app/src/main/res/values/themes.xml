<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FuelHub" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splash_primary</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.FuelHub.Splash" parent="Theme.FuelHub">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/splash_primary</item>
        <item name="android:navigationBarColor">@color/splash_primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
